<odoo>
    <data>
        <!-- Vista de lista (tree) -->
        <record model="ir.ui.view" id="view_factura_list">
            <field name="name">factura.list</field>
            <field name="model">custom.invoice</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Facturas">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="date_invoice"/>
                    <field name="amount_total" sum="Total"/>
                </tree>
            </field>
        </record>

        <!-- Vista de formulario -->
        <record model="ir.ui.view" id="view_factura_form">
            <field name="name">factura.form</field>
            <field name="model">custom.invoice</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Factura">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="partner_id"/>
                            </group>
                            <group>
                                <field name="date_invoice"/>
                                <field name="amount_total"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acción de ventana -->
        <record model="ir.actions.act_window" id="action_factura">
            <field name="name">Facturas</field>
            <field name="res_model">custom.invoice</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menú principal -->
        <menuitem name="Facturación" 
                  id="menu_facturacion_root"
                  sequence="10"/>

        <!-- Submenú -->
        <menuitem name="Facturas" 
                  id="menu_factura" 
                  parent="menu_facturacion_root"
                  action="action_factura"
                  sequence="1"/>
    </data>
</odoo>
