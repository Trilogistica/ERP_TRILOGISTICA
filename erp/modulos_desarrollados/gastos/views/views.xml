<odoo>
  <data>

  
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="gastos.gasto_list">
      <field name="name">Lista de Gastos</field>
      <field name="model">gastos.gasto</field>
      <field name="arch" type="xml">
        <list>
          <field name="create_date" string="Creado en"/>
          <field name="name"/>
          <field name="expense_date" string="Expiracion"/>
          <field name="value" string="Total"  widget="monetary"/>
          
        </list>
      </field>
    </record>

    <!-- explicit form view definition -->
    <record model="ir.ui.view" id="gastos.gasto_form">
  <field name="name">Formulario de Gasto</field>
  <field name="model">gastos.gasto</field>
  <field name="arch" type="xml">
    <form string="Gasto">
      <sheet>
        <group>
          <div class="oe_title">
            <label for="name"/>
            <h1>
              <field name="name" placeholder="Describa el gasto"/>
            </h1>
          </div>
          <!-- AquÃ­ colocamos los campos juntos en un grupo -->
          <group>
            <field name="create_date" widget="date" />
            <field name="value" widget="monetary" options="{'currency_field': 'currency_id'}" required="1" string="Valor en Q"/>
          </group>
        </group>
        <group>
          <field name="expense_date" widget="date" string="Fecha de Expiracion"/>
        </group>
      </sheet>
    </form>
  </field>
</record>


    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="gastos.action_gasto_window">
      <field name="name">Mis Gastos</field>
      <field name="res_model">gastos.gasto</field>
      <field name="view_mode">list,form</field>
      <field name="view_id" ref="gastos.gasto_list"/>
    </record>

    <!-- Top menu item -->
    <menuitem name="Mis Gastos" id="gastos.menu_root"/>

    <!-- menu categories -->
    <menuitem name="Gastos" id="gastos.menu_1" parent="gastos.menu_root"/>

    <!-- actions -->
    <menuitem name="Gasto" id="gastos.1_gasto_list" parent="gastos.menu_1"
              action="gastos.action_gasto_window"/>
  </data>
</odoo>
