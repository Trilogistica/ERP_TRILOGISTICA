<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="gastos.gasto_list">
      <field name="name">Lista de Gastos</field>
      <field name="model">gastos.gasto</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="value"/>
        </list>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="gastos.action_gasto_window">
      <field name="name">Vista de Gastos</field>
      <field name="res_model">gastos.gasto</field>
      <field name="view_mode">list,form</field>
    </record>


    <!-- server action to the one above -->
